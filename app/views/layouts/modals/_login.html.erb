<!-- Log in Modal -->
<div class="modal fade" id="login" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Sign up</h4>
      </div>
      <div class="modal-body text-center">
        <a type="button" class="btn btn-default btn-block btn-lg" href="/login/google">
          <i class="fa fa-google pull-left"></i>Log in with Google
        </a>
        <a type="button" class="btn btn-default btn-block btn-lg fb" href="">
          <i class="fa fa-facebook pull-left"></i>Log in with Facebook
        </a>
        <br>
        <p class="">
          or log in with email
        </p>
        <%= form_tag "/login/regular", method: :post do %>
          <div class="form-group">
            <%= label_tag "email", "" , class: "control-label" %>
            <%= text_field_tag :email, "",placeholder: "Email address", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag "password", "", placeholder: "Password", class: "control-label" %>
            <%= password_field_tag(:password, "", placeholder: "Password", class: "form-control") %>
          </div>
          <%= button_tag "Log in", class: "btn btn-danger" %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
