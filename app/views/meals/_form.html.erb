<div class="col-md-6">
  <%= form_for meal, html: { multipart: true } do |f| %>
    <% if meal.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(meal.errors.count, "error") %> prohibited this meal from being saved:</h2>

        <ul>
        <% meal.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>
    <div class="form-group">
      <%= f.label :cuisine %>
      <%= f.select(:cuisine, options_for_select([['Americana', 'Americana'], ['Chinese', 'Chinese'], ['Indian', ' Indian '], ['Italian', 'Italian'], ['Mexican', 'Mexican'], ['Thai', 'Thai']])) %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price, class: "form-control" %>
    </div>

      <%= f.hidden_field :chef_id, :value => current_user.id %>
    <div class="form-group">
      <%= f.submit "Submit", class: "form-control btn btn-info" %>
    </div>
  <% end %>
</div>
